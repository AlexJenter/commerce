{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "order"
  ],
  "properties": {
    "order": {
      "$id": "#/properties/order",
      "type": "object",
      "title": "The Order Schema",
      "required": [
        "id",
        "recalculationMode",
        "lineItems",
        "orderAdjustments"
      ],
      "properties": {
        "id": {
          "$id": "#/properties/order/properties/id",
          "type": "integer",
          "title": "The ID Schema",
          "default": "",
          "examples": [
            "13"
          ],
          "pattern": "^(.*)$"
        },
        "recalculationMode": {
          "$id": "#/properties/order/properties/recalculationMode",
          "type": "string",
          "title": "The Recalculation Mode Schema",
          "default": "",
          "examples": [
            "none"
          ],
          "pattern": "^(.*)$"
        },
        "lineItems": {
          "$id": "#/properties/order/properties/lineItems",
          "type": "array",
          "title": "The Line Items Schema",
          "items": {
            "$id": "#/properties/order/properties/lineItems/items",
            "type": "object",
            "title": "The Items Schema",
            "required": [
              "id",
              "salePrice",
              "qty",
              "note",
              "adminNote",
              "purchasableId",
              "orderId",
              "lineItemStatusId",
              "adjustments",
              "options"
            ],
            "properties": {
              "id": {
                "$id": "#/properties/order/properties/lineItems/items/properties/id",
                "type": ["null","integer"],
                "title": "The ID Schema",
                "default": "",
                "examples": [
                  "1"
                ],
                "pattern": "^(.*)$"
              },
              "salePrice": {
                "$id": "#/properties/order/properties/lineItems/items/properties/salePrice",
                "type": "number",
                "title": "The Sale Price Schema",
                "default": "",
                "examples": [
                  "9.0000"
                ],
                "pattern": "^(.*)$"
              },
              "qty": {
                "$id": "#/properties/order/properties/lineItems/items/properties/qty",
                "type": "integer",
                "title": "The Qty Schema",
                "default": "",
                "examples": [
                  "1"
                ],
                "pattern": "^(.*)$"
              },
              "note": {
                "$id": "#/properties/order/properties/lineItems/items/properties/note",
                "type": "string",
                "title": "The Note Schema",
                "default": "",
                "examples": [
                  ""
                ],
                "pattern": "^(.*)$"
              },
              "adminNote": {
                "$id": "#/properties/order/properties/lineItems/items/properties/adminNote",
                "type": "string",
                "title": "The Admin Note Schema",
                "default": "",
                "examples": [
                  ""
                ],
                "pattern": "^(.*)$"
              },
              "purchasableId": {
                "$id": "#/properties/order/properties/lineItems/items/properties/purchasableId",
                "type": ["integer","null"],
                "title": "The Purchasable ID Schema",
                "default": "",
                "examples": [
                  "6"
                ],
                "pattern": "^(.*)$"
              },
              "shippingCategoryId": {
                "$id": "#/properties/order/properties/lineItems/items/properties/shippingCategoryId",
                "type": "integer",
                "title": "The Shipping category ID Schema",
                "default": "",
                "examples": [
                  "1"
                ],
                "pattern": "^(.*)$"
              },
              "description": {
                "$id": "#/properties/order/properties/lineItems/items/properties/description",
                "type": "string",
                "title": "The Description Schema",
                "default": "",
                "examples": [
                  "Parka With Stripes On Back"
                ],
                "pattern": "^(.*)$"
              },
              "options": {
                "$id": "#/properties/order/properties/lineItems/items/properties/options",
                "type":  ["array", "object"],
                "title": "The Options Schema"
              },
              "lineItemStatusId": {
                "$id": "#/properties/order/properties/lineItems/items/properties/lineItemStatusId",
                "type": ["null","integer"],
                "title": "The Line item status ID Schema",
                "default": null,
                "examples": [
                  null,
                  12
                ]
              },
              "adjustments": {
                "$id": "#/properties/order/properties/lineItems/items/properties/adjustments",
                "type": "array",
                "title": "The Adjustments Schema",
                "items": {
                  "$id": "#/properties/order/properties/lineItems/items/properties/adjustments/items",
                  "type": "object",
                  "title": "The Items Schema",
                  "required": [
                    "id",
                    "name",
                    "description",
                    "type",
                    "amount",
                    "included",
                    "orderId",
                    "lineItemId"
                  ],
                  "properties": {
                    "id": {
                      "$id": "#/properties/order/properties/lineItems/items/properties/adjustments/items/properties/id",
                      "type": ["integer","null"],
                      "title": "The ID Schema",
                      "default": "",
                      "examples": [
                        "5"
                      ],
                      "pattern": "^(.*)$"
                    },
                    "name": {
                      "$id": "#/properties/order/properties/lineItems/items/properties/adjustments/items/properties/name",
                      "type": "string",
                      "title": "The Name Schema",
                      "default": "",
                      "examples": [
                        "10% off"
                      ],
                      "pattern": "^(.*)$"
                    },
                    "description": {
                      "$id": "#/properties/order/properties/lineItems/items/properties/adjustments/items/properties/description",
                      "type": "string",
                      "title": "The Description Schema",
                      "default": "",
                      "examples": [
                        ""
                      ],
                      "pattern": "^(.*)$"
                    },
                    "type": {
                      "$id": "#/properties/order/properties/lineItems/items/properties/adjustments/items/properties/type",
                      "type": "string",
                      "title": "The Type Schema",
                      "default": "",
                      "examples": [
                        "discount"
                      ],
                      "pattern": "^(.*)$"
                    },
                    "amount": {
                      "$id": "#/properties/order/properties/lineItems/items/properties/adjustments/items/properties/amount",
                      "type": "number",
                      "title": "The Amount Schema",
                      "default": "",
                      "examples": [
                        "-3.0000"
                      ],
                      "pattern": "^(.*)$"
                    },
                    "included": {
                      "$id": "#/properties/order/properties/lineItems/items/properties/adjustments/items/properties/included",
                      "type": "boolean",
                      "title": "The Included Schema",
                      "default": "",
                      "examples": [
                        "0"
                      ],
                      "pattern": "^(.*)$"
                    },
                    "orderId": {
                      "$id": "#/properties/order/properties/lineItems/items/properties/adjustments/items/properties/orderId",
                      "type": "integer",
                      "title": "The Orderid Schema",
                      "default": "",
                      "examples": [
                        "13"
                      ],
                      "pattern": "^(.*)$"
                    },
                    "lineItemId": {
                      "$id": "#/properties/order/properties/lineItems/items/properties/adjustments/items/properties/lineItemId",
                      "type": "integer",
                      "title": "The Lineitemid Schema",
                      "default": "",
                      "examples": [
                        "1"
                      ],
                      "pattern": "^(.*)$"
                    }
                  }
                }
              }
            }
          }
        },
        "orderAdjustments": {
          "$id": "#/properties/order/properties/orderAdjustments",
          "type": "array",
          "title": "The Orderadjustments Schema",
          "items": {
            "$id": "#/properties/order/properties/orderAdjustments/items",
            "type": "object",
            "title": "The Items Schema",
            "required": [
              "id",
              "name",
              "description",
              "type",
              "amount",
              "included",
              "orderId"
            ],
            "properties": {
              "id": {
                "$id": "#/properties/order/properties/orderAdjustments/items/properties/id",
                "type": ["integer","null"],
                "title": "The ID Schema",
                "default": "",
                "examples": [
                  "4"
                ],
                "pattern": "^(.*)$"
              },
              "name": {
                "$id": "#/properties/order/properties/orderAdjustments/items/properties/name",
                "type": "string",
                "title": "The Name Schema",
                "default": "",
                "examples": [
                  "Free Shipping"
                ],
                "pattern": "^(.*)$"
              },
              "description": {
                "$id": "#/properties/order/properties/orderAdjustments/items/properties/description",
                "type": "string",
                "title": "The Description Schema",
                "default": "",
                "examples": [
                  "All Countries, free shipping."
                ],
                "pattern": "^(.*)$"
              },
              "type": {
                "$id": "#/properties/order/properties/orderAdjustments/items/properties/type",
                "type": "string",
                "title": "The Type Schema",
                "default": "",
                "examples": [
                  "shipping"
                ],
                "pattern": "^(.*)$"
              },
              "amount": {
                "$id": "#/properties/order/properties/orderAdjustments/items/properties/amount",
                "type": "number",
                "title": "The Amount Schema",
                "default": "",
                "examples": [
                  "10.0000"
                ],
                "pattern": "^(.*)$"
              },
              "included": {
                "$id": "#/properties/order/properties/orderAdjustments/items/properties/included",
                "type": "boolean",
                "title": "The Included Schema",
                "default": "",
                "examples": [
                  "0"
                ],
                "pattern": "^(.*)$"
              },
              "orderId": {
                "$id": "#/properties/order/properties/orderAdjustments/items/properties/orderId",
                "type": "integer",
                "title": "The Orderid Schema",
                "default": "",
                "examples": [
                  "13"
                ],
                "pattern": "^(.*)$"
              }
            }
          }
        }
      }
    }
  }
}