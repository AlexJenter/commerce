{% extends "market/_layouts/settingscp" %}

{% set crumbs = [
{ label: "Market Settings"|t, url: url('market/settings') },
{ label: "Emails"|t, url: url('market/settings/emails') },
] %}

{% import "_includes/forms" as forms %}

{% set content %}
<form method="post" accept-charset="UTF-8" data-saveshortcut>
    <input type="hidden" name="action" value="market/email/save">
    <input type="hidden" name="redirect" value="market/settings/emails">

    {{ getCsrfInput() }}
    {% if email.id %}<input type="hidden" name="emailId" value="{{ email.id }}">{% endif %}

    {{ forms.textField({
        first: true,
        label: "Name"|t,
        instructions: "What this email will be called in the CP."|t,
        id: 'name',
        name: 'name',
        value: email.name,
        errors: email.getErrors('name'),
        autofocus: true,
        required: true,
        translatable: true
    }) }}

    {{ forms.textField({
        label: "Email Subject"|t,
        id: 'subject',
        name: 'subject',
        value: email.subject,
        errors: email.getErrors('subject'),
        required: true,
    }) }}

    {{ forms.textField({
        label: 'Recipient'|t,
        instructions: 'Receiver of this email.'|t,
        id: 'to',
        name: 'to',
        value: email.to,
        errors: email.getErrors('to'),
        required: true,
    }) }}

    {{ forms.textField({
        label: 'BCCâ€™d Recipient'|t,
        id: 'bcc',
        name: 'bcc',
        value: email.bcc,
        errors: email.getErrors('bcc'),
    }) }}

    {{ forms.textField({
        label: 'HTML Email Template Path'|t,
        instructions: 'The template to be used for HTML emails.'|t,
        id: 'templatePath',
        name: 'templatePath',
        value: email.templatePath,
        errors: email.getErrors('templatePath'),
        required: true,
    }) }}

    {{ forms.checkboxField({
        label: "Enabled"|t,
        instructions: ""|t,
        id: 'enabled',
        name: 'enabled',
        value: 1,
        checked: email.enabled,
        errors: email.getErrors('enabled')
    }) }}

    <div class="buttons">
        <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
    </div>
</form>

{% endset %}
