{% extends "market/_layouts/cp" %}
{% set title = "Variant Field Layout"|t %}

{% set crumbs = [
{ label: "Market Settings"|t, url: url('market/settings') },
{ label: "Product Types"|t, url: url('market/settings/producttypes/') },
{ label: productType.name, url: url('market/settings/producttypes/'~productTypeId) },
] %}


{% set selectedTab = 'settings' %}
{% import "_includes/forms" as forms %}

{% set content %}
    <form method="post" accept-charset="UTF-8" data-saveshortcut>
        <input type="hidden" name="action" value="market/productType/saveVariantFieldLayout">
        <input type="hidden" name="redirect" value="market/settings/producttypes/{id}">

        {{ getCsrfInput() }}
        <input type="hidden" name="productTypeId" value="{{ productTypeId }}">

        {% include "_includes/fieldlayoutdesigner" with {
        fieldLayout: productType.asa('variantFieldLayout').getFieldLayout(),
        } only %}

        <hr>

        <div class="buttons">
            <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
        </div>
    </form>

{% endset %}

