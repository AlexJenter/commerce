{% extends "market/_layouts/elementindex" %}
{% set title = "Orders"|t %}
{% set elementType = 'Market_Order' %}
{% set selectedTab = 'orders' %}

{% block sidebar %}

    {% if sources is not empty %}
        <nav>
            {% include "market/_elements/sources" %}
        </nav>
    {% endif %}

    {% if not orderTypes|length > 0 %}

        <p><span style="color:red">No order types exist!</span><br/>Go to settings and <a
                    href="{{ url('market/settings/ordertypes') }}">create a new order type </a> please.</p>
    {% endif %}

{% endblock %}