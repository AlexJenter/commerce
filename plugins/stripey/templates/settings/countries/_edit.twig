{% extends "stripey/_layouts/cp" %}
{% set title = "Countries"|t %}

{% set crumbs = [
{ label: "Stripey"|t, url: url('stripey') },
{ label: "Settings"|t, url: url('stripey/settings') },
{ label: "Countries"|t, url: url('stripey/settings/countries') },
] %}

{% set tabs = {
dashboard: { label: "Dashboard"|t, url: url('stripey') },
products: { label: "Products"|t, url: url('stripey/products') },
charges: { label: "Charges"|t, url: url('stripey/charges') },
plans: { label: "Plans"|t, url: url('stripey/plans') },
settings: { label: "Settings"|t, url: url('stripey/settings') }
} %}



{% set selectedTab = 'settings' %}
{% import "_includes/forms" as forms %}

{% set content %}
<form method="post" accept-charset="UTF-8" data-saveshortcut>
    <input type="hidden" name="action" value="stripey/country/save">
    <input type="hidden" name="redirect" value="stripey/settings/countries">

    {{ getCsrfInput() }}
    {% if country.id %}<input type="hidden" name="countryId" value="{{ country.id }}">{% endif %}

    {{ forms.textField({
        first: true,
        label: "Name"|t,
        instructions: "What this country will be called in the CP."|t,
        id: 'name',
        name: 'name',
        value: country.name,
        errors: country.getErrors('name'),
        autofocus: true,
        required: true,
        translatable: true
    }) }}

    {{ forms.textField({
        label: "ISO"|t,
        instructions: "2-letter ISO code."|t,
        id: 'iso',
        name: 'iso',
        value: country.iso,
        errors: country.getErrors('iso'),
        required: true,
    }) }}

    {{ forms.checkboxField({
        label: "State required?"|t,
        instructions: "Does this country require a state to be selected?"|t,
        id: 'stateRequired',
        name: 'stateRequired',
        value: 1,
        checked: country.stateRequired,
        errors: country.getErrors('stateRequired')
    }) }}

    <hr>

    <div class="buttons">
        <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
    </div>
</form>

{% endset %}