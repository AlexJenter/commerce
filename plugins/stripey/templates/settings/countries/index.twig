{% extends "stripey/_layouts/cp" %}

{% set title = "Stripey"|t %}

{% set crumbs = [
{ label: "Stripey"|t, url: url('stripey') },
{ label: "Settings"|t, url: url('stripey/settings') },
{ label: "Countries"|t, url: url('stripey/settings/countries') }
] %}


{% set tabs = {
dashboard: { label: "Dashboard"|t, url: url('stripey') },
products: { label: "Products"|t, url: url('stripey/products') },
charges: { label: "Charges"|t, url: url('stripey/charges') },
plans: { label: "Plans"|t, url: url('stripey/plans') },
settings: { label: "Settings"|t, url: url('stripey/settings') }
} %}

{% set selectedTab = 'settings' %}

{% set content %}


    <table id="countries" class="data fullwidth collapsible">
        <thead>
        <tr><th scope="col">Name</th>
            <th scope="col">ISO</th>
            <th scope="col">State required?</th>
            <td class="thin"></td>
        </tr></thead>
        <tbody>
        {% for country in countries %}
        <tr data-id="{{country.id}}" data-name="{{country.name}}">
            <th scope="row" data-title="Name"><a href="{{url('stripey/settings/countries/'~country.id)}}">{{country.name}}</a></th>
            <td data-title="ISO">{{country.iso}}</td>
            <td data-title="State required?">{{country.stateRequired ? 'Yes'|t : 'No'|t}}</td>
            <td class="thin"><a class="delete icon" title="{{ 'Delete'|t }}" role="button"></a></td>
        </tr>
        {% endfor %}

        </tbody>
    </table>
    <br/>
    <div class="btngroup submit first">
    <a href="{{url('stripey/settings/countries/new')}}" class="btn submit" >New Country</a>
    </div>
</form>
{% endset %}


{% set js %}
var adminTable = new Craft.AdminTable({
    tableSelector: '#countries',
    deleteAction: 'stripey/country/delete',
    confirmDeleteMessage: '{{ "Are you sure you want to delete “{name}”?"|t }}'
});
{% endset %}
{% includeJs js %}