{% extends "stripey/_layouts/cp" %}

{% set title = "Stripey"|t %}

{% set crumbs = [
{ label: "Stripey"|t, url: url('stripey') },
{ label: "Settings"|t, url: url('stripey/settings') },
{ label: "Product Types"|t, url: url('stripey/settings/producttypes') }
] %}


{% set tabs = {
dashboard: { label: "Dashboard"|t, url: url('stripey') },
products: { label: "Products"|t, url: url('stripey/products') },
charges: { label: "Charges"|t, url: url('stripey/charges') },
plans: { label: "Plans"|t, url: url('stripey/plans') },
settings: { label: "Settings"|t, url: url('stripey/settings') }
} %}



{% set selectedTab = 'settings' %}

{% set content %}


    <table id="producttypes" class="data fullwidth collapsible">
        <thead>
        <tr><th scope="col">Name</th>
            <th scope="col">Handle</th>
            <td class="thin"></td>
        </tr></thead>
        <tbody>
        {% for productType in productTypes %}
        <tr data-id="{{productType.id}}" data-name="{{productType.name}}">
            <th scope="row" data-title="Name"><a href="{{url('stripey/settings/producttypes/'~productType.id)}}">{{productType.name}}</a></th>
            <td data-title="Handle"><code>{{productType.handle}}</code></td>
            <td class="thin"><a class="delete icon" title="{{ 'Delete'|t }}" role="button"></a></td>
        </tr>
        {% endfor %}

        </tbody>
    </table>
    <br/>
    <div class="btngroup submit first">
    <a href="{{url('stripey/settings/producttypes/new')}}" class="btn submit" >New Product Type</a>
    </div>
</form>
{% endset %}


{% set js %}
var adminTable = new Craft.AdminTable({
tableSelector: '#producttypes',
noObjectsSelector: '#noproducttypes',
newObjectBtnSelector: '#newproductTypecontainer',
deleteAction: 'stripey/productType/deleteProductType',
confirmDeleteMessage: '{{ "Are you sure you want to delete “{name}” and all its products? Please make sure you have a backup of your database before before peforming this desctruction action"|t }}'
});
{% endset %}
{% includeJs js %}