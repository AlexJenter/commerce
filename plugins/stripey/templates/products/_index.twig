{% extends "stripey/_layouts/elementindex" %}
{% set title = "Products"|t %}
{% set elementType = 'Stripey_Product' %}
{% set selectedTab = 'products' %}

{% set crumbs = [
{ label: "Stripey"|t, url: url('stripey') },
{ label: "Products"|t, url: url('stripey/products') }
] %}

{% block sidebar %}

    {% if productTypes|length %}
        <div class="buttons">
            {% if productTypes|length > 1 %}
                <div class="btn submit menubtn add icon">{{ "New Product"|t }}</div>
                <div class="menu">
                    <ul>
                        {% for productType in productTypes %}
                            <li>
                                <a href="{{ url('stripey/products/'~productType.handle~'/new') }}">{{ productType.name|t }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% else %}
                <a class="btn submit add icon"
                   href="{{ url('stripey/products/'~productTypes[0].handle~'/new') }}">{{ "New Product"|t }}</a>
            {% endif %}
        </div>
    {% endif %}




    {{ parent() }}

    {% if not productTypes|length > 0 %}

        <p><span style="color:red">No product types exist!</span><br/>Go to settings and <a
                    href="{{ url('stripey/settings/producttypes') }}">create a new product type </a> please.</p>
    {% endif %}

{% endblock %}