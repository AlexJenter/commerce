<div id="stripey-nav">
    <div class="btn menubtn">Menu</div>
    <div class="stripey-navcontent">
        {% include "stripey/_includes/nav.twig" %}
    </div>
</div>

<style>
    #stripey-nav {
        margin-left: 10px;
        display: inline;
        float:right;
    }
    .stripey-navcontent{
        position: absolute;
        z-index: 1000;
        background-color: white;
        -webkit-box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.05), 0 2px 8px -2px rgba(0, 0, 0, 0.1);
        -moz-box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.05), 0 2px 8px -2px rgba(0, 0, 0, 0.1);
        box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.05), 0 2px 8px -2px rgba(0, 0, 0, 0.1);
        margin: 5px 0;
        padding: 24px;
        border-radius: 3px;
        word-wrap: break-word;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        display: none;
    }
</style>
{% set js %}

$(function(){
    var menubtn = $('#stripey-nav .btn'),
        position = menubtn.offset();

    $('.stripey-navcontent').css({top: Math.round(position.top + menubtn.outerHeight()) + 'px', left: Math.round(position.left) + 'px'}).appendTo('body');

    menubtn.click(function(){
        $('.stripey-navcontent').toggle();
    });

    $('html').click(function() {
        $('#stripey-nav .stripey-navcontent').hide();
    });

    $('#stripey-nav').click(function(e){
        e.stopPropagation();
    });
});
{% endset %}
{% includeJs js %}